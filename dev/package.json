    "connect-mongo": "^5.1.0",
    "dotenv": "^16.4.7",
    "express-session": "^1.18.1",
    "mongoose": "^8.11.0",
    "nestjs-eve-auth": "file:../lib",
    "passport-oauth2": "^1.8.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.5",
    "@nestjs/schematics": "^11.0.1",
